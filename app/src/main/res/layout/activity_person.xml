<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".myinformation"
    android:background="@mipmap/background">
    <LinearLayout
        android:id="@+id/headView"
        android:layout_width="match_parent"
        android:layout_height="120dip"
        android:background="@color/pureWhite"
        android:orientation="vertical"
        android:alpha="0.85"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="MissingConstraints">
        <com.gyg.lenovo.world.CircleImageView
            android:id="@+id/imageBox"
            android:layout_marginTop="10dip"
            android:layout_width="75dip"
            android:layout_height="75dip"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/menu"
        app:layout_constraintTop_toBottomOf="@+id/headView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:alpha="0.8">
        <com.gyg.lenovo.world.InformationView
            android:id="@+id/level"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:left_logo="@drawable/level"
            app:body_text="昵称:"
            android:layout_weight="1">
        </com.gyg.lenovo.world.InformationView>
        <com.gyg.lenovo.world.InformationView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:left_logo="@drawable/account"
            app:body_text="姓名:"
            android:layout_weight="1">
        </com.gyg.lenovo.world.InformationView>
        <com.gyg.lenovo.world.InformationView
            android:id="@+id/account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:left_logo="@drawable/phone"
            app:body_text="手机号:"
            android:layout_weight="1">
        </com.gyg.lenovo.world.InformationView>
        <com.gyg.lenovo.world.InformationView
            android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:left_logo="@drawable/gender"
            app:body_text="性别:"
            android:layout_weight="1">
        </com.gyg.lenovo.world.InformationView>
        <com.gyg.lenovo.world.InformationView
            android:id="@+id/signing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:left_logo="@drawable/signing"
            app:body_text="签名:"
            android:layout_weight="1">
        </com.gyg.lenovo.world.InformationView>

        <com.gyg.lenovo.world.InformationView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:left_logo="@drawable/address"
            app:body_text="地址:"
            android:layout_weight="1">
        </com.gyg.lenovo.world.InformationView>

        <com.gyg.lenovo.world.InformationView
            android:id="@+id/hoby"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:left_logo="@drawable/hoby"
            app:body_text="爱好:"
            android:layout_weight="1">
        </com.gyg.lenovo.world.InformationView>

        <Button
            android:id="@+id/more_button"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/circle_button"
            android:text="进入他的小世界"
            android:textSize="18dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />

        <Button
            android:id="@+id/add_button"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/circle_button"
            android:textSize="18dp"
            android:textColor="@color/colorWhite"
            android:text="添加好友"
            android:textStyle="bold" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
